{
    "manifest_version": 2,
    "name": "Motivation",
    "description": "Chrome extension that shows a motivational quote whenever someone makes a new tab.",
    "version": "1.0",
    "chrome_url_overrides": {
        "newtab": "newpage.html"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons":{"128":"icon_128.png"},
    "permissions": [
        "tabs", "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}